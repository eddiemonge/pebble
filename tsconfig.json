{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "noResolve": false,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
